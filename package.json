{
  "version": "1.1.0",
  "private": true,
  "license": "MIT",
  "engines": {},
  "scripts": {
    "postinstall": "yarnw-sync-deps && yarn-deduplicate",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "lint": "eslint packages --ext .js",
    "test:packages-ngrams": "jest q3-plugin-ngrams --detectOpenHandles --forceExit",
    "test:packages-extref": "jest q3-plugin-extref --detectOpenHandles --forceExit",
    "test:packages-scheduler": "jest q3-core-scheduler --detectOpenHandles --forceExit",
    "test:packages-changestream": "jest q3-plugin-changelog --detectOpenHandles --forceExit",
    "test:packages": "jest \"^(.*?)\\.unit.test.js\"  --runInBand  --detectOpenHandles --forceExit --collectCoverage --coverageDirectory coverage/coverage_units",
    "test:integrations": "jest \"^(.*?)\\.int.test.js\" --runInBand --detectOpenHandles --forceExit --collectCoverage --coverageDirectory coverage/coverage_integrations",
    "test:e2e": "yarn workspace e2e-tests test",
    "test": "yarn test:packages && yarn test:packages-scheduler && yarn test:packages-ngrams && yarn test:packages-extref && yarn test:packages-changestream && yarn test:e2e",
    "coverage": "lcov-result-merger coverage/coverage_*/lcov.info | codecov --pipe",
    "upload": "lerna publish",
    "demo-web": "nodemon demo",
    "demo-worker": "nodemon demo/worker",
    "docs": "jsdoc -c jsdoc.json"
  },
  "workspaces": [
    "demo",
    "e2e-tests",
    "packages/*"
  ],
  "devDependencies": {
    "codecov": "^3.8.3",
    "eslint": "^7.15.0",
    "eslint-config-node-3merge": "^1.2.1",
    "jest": "^27.4.3",
    "jest-watch-typeahead": "^1.0.0",
    "jest-watch-yarn-workspaces": "^1.1.0",
    "lcov-result-merger": "^3.1.0",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "yarn-deduplicate": "^3.1.0",
    "yarn-workspace-sync-deps": "^0.3.2"
  },
  "dependencies": {
    "api-query-params": "^5.3.1",
    "bambora-node": "^1.1.3",
    "body-parser": "^1.19.0",
    "cls-hooked": "^4.2.2",
    "comparisons": "2.2.10",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.8.0",
    "flat": "^5.0.2",
    "glob": "^7.2.0",
    "i18next": "^21.5.6",
    "i18next-http-middleware": "^3.1.4",
    "jest-environment-node": "^27.4.2",
    "lodash": "^4.17.20",
    "m2e-validator": "^1.3.10",
    "micromatch": "^4.0.2",
    "moment": "^2.29.1",
    "mongodb-cron": "^1.7.0",
    "mongoose": "^6.1.0",
    "mongoose-dedupe": "^1.0.13",
    "mongoose-field-populate": "^2.2.6",
    "mongoose-partial-search": "^1.0.6",
    "sift": "^15.1.0"
  },
  "resolutions": {
    "axios": "^0.21.1",
    "mongoose": "^6.1.0"
  }
}
