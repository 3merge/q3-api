{
  "version": "1.1.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "yarn": "^1.x.x",
    "node": "^12.x.x"
  },
  "scripts": {
    "postinstall": "yarnw-sync-deps && yarn-deduplicate",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "lint": "eslint . --ext .js --ignore-pattern node_modules",
    "test:packages": "jest \"^(.*?)\\.unit.test.js\"  --detectOpenHandles --forceExit --collectCoverage --coverageDirectory coverage/coverage_units",
    "test:integrations": "jest \"^(.*?)\\.int.test.js\" --runInBand --detectOpenHandles --forceExit --collectCoverage --coverageDirectory coverage/coverage_integrations",
    "test:e2e": "yarn workspace e2e-tests test",
    "test": "yarn test:packages && yarn test:e2e",
    "coverage": "lcov-result-merger coverage/coverage_*/lcov.info | codecov --pipe",
    "upload": "lerna publish",
    "demo": "nodemon demo"
  },
  "workspaces": [
    "demo",
    "e2e-tests",
    "packages/*"
  ],
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.3.0",
    "codecov": "^3.6.5",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-node-3merge": "^1.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^25.3.0",
    "jest-haste-map": "^25.3.0",
    "jest-resolve": "^25.3.0",
    "jest-watch-typeahead": "^0.5.0",
    "jest-watch-yarn-workspaces": "^1.1.0",
    "lcov-result-merger": "^3.1.0",
    "lerna": "^3.16.4",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "supertest": "^4.0.2",
    "yarn-deduplicate": "^2.0.0",
    "yarn-workspace-sync-deps": "^0.3.2"
  },
  "dependencies": {
    "api-query-params": "^4.14.0",
    "bambora-node": "^1.0.0",
    "body-parser": "^1.19.0",
    "cls-hooked": "^4.2.2",
    "comparisons": "2.2.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "flat": "^5.0.0",
    "glob": "^7.1.6",
    "i18next": "^19.1.0",
    "i18next-express-middleware": "^1.9.0",
    "jest-environment-node": "^25.3.0",
    "lodash": "^4.17.15",
    "m2e-validator": "^1.3.2",
    "micromatch": "^4.0.2",
    "moment": "^2.24.0",
    "mongodb-cron": "^1.7.0",
    "mongoose": "^5.7.1",
    "mongoose-dedupe": "^1.0.0",
    "mongoose-field-populate": "^2.1.2",
    "mongoose-partial-search": "^1.0.1",
    "sift": "^12.0.0"
  }
}